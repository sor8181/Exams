def ticketsales():
    vip = int(input("Enter how many VIP tickets sold:")) #(Asks user how many tickets were sold)
    regular = int(input("Enter how many regular tickets sold:")) 
    budget = int(input("Enter how many budget tickets sold:"))
    total = (vip*150) + (regular*75) +  (budget*40) #(Calculates total amount)
    print("â‚¬",total,"in total sales") #(Displays money made)
    
ticketsales()
